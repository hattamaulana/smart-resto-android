<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_navigation"
    app:startDestination="@id/homeDest">

    <fragment
        android:id="@+id/homeDest"
        android:name="id.ac.polinema.seameo.ecanteen.view.fragment.HomeFragment"
        android:label="HOME"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/toScanner"
            app:destination="@id/scannerDest" />
        <action
            android:id="@+id/fromHomeToStatus"
            app:destination="@id/statusDest"
            app:popUpTo="@+id/homeDest"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/scannerDest"
        android:name="id.ac.polinema.seameo.ecanteen.view.fragment.ScannerFragment"
        android:label="HOME"
        tools:layout="@layout/fragment_scanner">
        <action
            android:id="@+id/toOrderDest"
            app:destination="@id/orderDest" />

        <action
            android:id="@+id/fromScannerToStatus"
            app:destination="@id/statusDest"
            app:popUpTo="@+id/scannerDest"
            app:popUpToInclusive="true" />

        <argument
            android:name="scanFor"
            android:defaultValue="addMenu"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/orderDest"
        android:name="id.ac.polinema.seameo.ecanteen.view.fragment.OrderFragment"
        android:label="OrderFragment"
        tools:layout="@layout/fragment_scan_result">

        <action
            android:id="@+id/action_orderDest_to_checkoutFragment"
            app:destination="@id/checkoutDest" />
    </fragment>

    <fragment
        android:id="@+id/statusDest"
        android:name="id.ac.polinema.seameo.ecanteen.view.fragment.StatusFragment"
        android:label="StatusFragment"
        tools:layout="@layout/fragment_status" />

    <fragment
        android:id="@+id/checkoutDest"
        android:name="id.ac.polinema.seameo.ecanteen.view.fragment.CheckoutFragment"
        android:label="CheckoutFragment"
        tools:layout="@layout/fragment_transaction">
        <action
            android:id="@+id/fromCheckoutToHome"
            app:destination="@id/homeDest"
            app:popUpTo="@+id/checkoutDest"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>