<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <LinearLayout
            android:id="@+id/card_tittle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangle_border"
    >
        <TextView
                android:id="@+id/order_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:text="Mahatta Maulana"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#aaa"
        />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="16dp"
                android:text="01 / 06 / 2019 : 00:00"
                android:textAlignment="gravity"
                android:gravity="right"
                android:textSize="18sp"
        />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/card_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/card_tittle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rectangle_border"
            android:paddingBottom="16dp"
    >
        <TextView
                android:id="@+id/order_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:text="Nasi Goreng"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/order_count_price"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>

        <TextView
                android:id="@+id/order_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:text="x 1"
                android:textSize="18sp"
                android:textColor="#aaa"
        />

        <TextView
                android:id="@+id/order_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rp 30.000"
                android:textSize="18sp"
                android:textColor="#aaa"
                app:layout_constraintTop_toBottomOf="@+id/order_item_name" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/order_count_price"
                android:layout_marginRight="8dp"/>

        <TextView
                android:id="@+id/order_count_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="24dp"
                android:layout_marginEnd="24dp"
                android:text="Rp 30.000"
                android:textSize="18sp"
                android:textColor="#000"
                app:layout_constraintTop_toBottomOf="@+id/order_item_name"
        />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>